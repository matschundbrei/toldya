{% include 'header.html' %}
<div class="pure-g">
  <div class="pure-u-1-12">&nbsp;</div>
  <div class="pure-u-20-24">
    <h1>Toldya</h1>
    <p><em>a system to record something you told someone</em></p>
    <p><em>non-public records will only ever displayed once, make sure to save the link somewhere</em></p>
  </div>
  <div class="pure-u-1-12">&nbsp;</div>
</div>
<hr />
<div class="pure-g">
  <div class="pure-u-1-12">&nbsp;</div>
  <div class="pure-u-8-24">
    <h2>Add a new toldya</h2>
    <form action="/" id="toldya" method="post" class="pure-form pure-form-stacked">
      <fieldset>
      <div class="pure-control-group">
        <label for="person">Who told it?</label>
        <input type="text" name="person" id="person" maxlength=255>
      </div>
      <div class="pure-control-group">
        <label for="target">To whom was it told?</label>
        <input type="text" name="target" id="target" maxlength=255>
      </div>
      <div class="pure-control-group">
        <label for="text">What was told?<label>
        <textarea name="text" id="text" cols=30 rows=10></textarea>
      </div>
      <div class="pure-control-group">
        <label for="ispub" class="pure-radio">
        <input type="radio" id="ispub" name="ispub" value="True" checked="">
        Make this public
        </label>
        <label for="isprv" class="pure-radio">
        <input type="radio" name="ispub" id="isprv" value="False">
        Keep this private
        </label>
      </div>
      <div class="pure-control-group">
        {{ captcha() }}
        <label for="captcha">Please enter the Code</label>
        <input type="text" id="captcha" name="captcha">
      </div>
      <div class="pure-control-group">
        <button type="submit" id="submit">add</button>
      </div>
      </fieldset>
    </form>
  </div>
  <div class="pure-u-12-24">
    <h2>Latest public toldya's</h2>
    <ul>
    {% for tell in latest %}
    <li>{{ tell.person }} told {{ tell.target }} "{{ tell.text }}" created at {{ tell.date }}
    [<a href="/{{ tell.id }}">permalink</a>]</li>
    {% endfor %}
    </ul>
  </div>
  <div class="pure-u-1-12">&nbsp;</div>
</div>
{% include 'footer.html' %}
